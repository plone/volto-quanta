{
  "name": "@plone/volto-quanta",
  "version": "1.0.0",
  "description": "Quanta Design System - Volto package",
  "main": "src/index.js",
  "scripts": {
    "prettier": "make prettier",
    "lint": "make lint",
    "stylelint": "make stylelint",
    "test": "make test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plone/volto-quanta.git"
  },
  "keywords": [
    "quanta",
    "volto",
    "addon",
    "design",
    "guide"
  ],
  "author": "Victor Fernandez de Alba",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/plone/volto-quanta/issues"
  },
  "homepage": "https://github.com/plone/volto-quanta#readme",
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "stylelint": {
    "extends": [
      "stylelint-config-idiomatic-order"
    ],
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "prettier/prettier": true,
      "declaration-block-single-line-max-declarations": 5,
      "rule-empty-line-before": [
        "always-multi-line",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "jest-axe": "4.1.0",
    "razzle-plugin-scss": "3.3.9",
    "theme-ui": "0.6.0-alpha.3"
  },
  "devDependencies": {
    "eslint-plugin-prettier": "3.1.3",
    "prettier": "2.0.5",
    "stylelint": "13.3.3",
    "stylelint-config-idiomatic-order": "8.1.0",
    "stylelint-config-prettier": "8.0.1",
    "stylelint-prettier": "1.1.2"
  }
}
